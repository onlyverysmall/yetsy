<% if @orders %>
  <ul>
    <% @orders.each do |order| %>
      <li>
        <%= order.created_at.strftime('%A, %B %-d, %Y') %>
        <br>
        <% order.items.each do |item| %>
          <%= render partial: "shared/item", locals: { item: item } %>
        <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>You have no orders</p>
<% end %>