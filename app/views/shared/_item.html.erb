<div class="item">
  <div class="item_photo">
    <%= filepicker_image_tag item.filepicker_url, w: 160, h: 140, fit: 'crop' %>
  </div>

  <div class="item_title">
    <%= link_to item.title, item_url(item) %>
  </div>

  <div class="item_price">
    $<%= item.price %>
  </div>

  <br>
  <div class="item_shop">
    <%= link_to item.shop.name, shop_url(item.shop) %>
  </div>

  <% if @favorited_items.include?(item) %>
    <button data-id="<%= item.id %>" class="unfav_button">unfavorite</button> 
  <% else %>
    <button data-id="<%= item.id %>" class="fav_button">favorite</button> 
  <% end %> 
</div>
