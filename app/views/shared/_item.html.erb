<li class="span3 item-list">
  <div class="thumbnail">
    <%= filepicker_image_tag item.filepicker_url, w: 260, h: 120, fit: 'crop' %>
    <h3><%= link_to item.title, item_url(item) %></h3>
    <p>
      <% if item.purchased %>
        SOLD
      <% else %>
        <%= number_to_currency(item.price) %>
      <% end %>
    </p>
    <p>
      <% if user_authorized?(item.owner) %>  
        <div class="btn-group edit-delete-group">
          <%= link_to "edit", edit_item_url(item), method: "get", class: "btn" %> 
          <%= link_to "delete", item_url(item), method: "delete", class: "btn" %>
        </div>
      <% end %>

      <% if @favorited_items && !(current_user.items.include?(item)) %>
        <!-- unfavorite form -->
        <% fave = Favorite.where(user_id: current_user.id, item_id: item.id).first %>
        <button class="btn unfavorite <%= "hidden" unless @favorited_items.include?(item) %>" data-id="<%= fave.id if fave %>">unfavorite</button>
        <!-- favorite form -->
        <button class="btn favorite <%= "hidden" if @favorited_items.include?(item) %>" data-id="<%= item.id %>">favorite</button>
      <% end %> 
    </p>
  </div>
</li>
