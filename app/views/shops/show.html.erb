<h1><%= @shop.name %></h1>

<div class="edit_shop_links">
  <% if user_authorized?(@shop.owner) %>
    <%= link_to "Edit shop", edit_shop_url(@shop) %> |
    <%= link_to "Create new item", new_item_url %>
  <% end %>
</div>

<div class="items">
  <% @shop.items.each do |item| %>
    <%= render partial: "shared/item", locals: { item: item } %>
    <% if user_authorized?(@shop.owner) %>  
      <div class="modify_item">
        <%= button_to "Edit", edit_item_url(item), method: "get" %>
        <%= button_to "Delete item", item_url(item), method: "delete" %>
      </div>
      <% end %> 
  <% end %>
</div>