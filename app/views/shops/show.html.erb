<h1><%= @shop.name %></h1>


<% if user_authorized?(@shop.owner) %>
  <%= link_to "Edit shop", edit_shop_url(@shop) %> |
  <%= link_to "Create new item", new_item_url %>
<% end %>

<ul>
  <% @shop.items.each do |item| %>
    <li>
      <%= link_to item.title, item_url(item) %> 
      <% if user_authorized?(@shop.owner) %>  
        | <%= link_to "Edit", edit_item_url(item) %>
        <%= button_to "Delete item", item_url(item), method: "delete" %>
      <% end %>  
    </li>
  <% end %>
</ul>